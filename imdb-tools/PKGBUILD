pkgname=imdb-tools
pkgver=0.0.1
pkgrel=2
pkgdesc="search IMDb and ffmpeg helper"
arch=('any')
license=('GPL')
depends=('python-beautifulsoup4' 'bash' 'ffmpeg')
source=("$pkgname-$pkgver.tar.xz")
b2sums=('5ca1e8b6f8bc78851ec5c46a3d0138a4f36b750633ef2f9882f98ff66585d5e3f51f1d87b21034768ca408c7a7f107ade3dd53876d6701a2b5d57fe77f9e0ea3')
package() {
	cd "$pkgname-$pkgver"
	mkdir -p "$pkgdir/usr/bin/"
	cp ff ffid imdb imdb_de srt "$pkgdir/usr/bin/"
}
